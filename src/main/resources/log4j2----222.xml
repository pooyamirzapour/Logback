<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config"  packages="com.bol.logback">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyyMMdd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %spi%n"/>
            <PatternLayout pattern="%d %5p [%t].(%F:%L) %m%n %ex{full} %hideEmails"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.apache.log4j.xml" level="all" />
        <Root level="all">
            <AppenderRef ref="STDOUT"  />
        </Root>
    </Loggers>
</Configuration>